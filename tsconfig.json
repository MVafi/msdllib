{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "allowJs": true,
    "checkJs": false,
    "importHelpers": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": ["node", "jest"],
    //"declaration": true,
    //"declarationDir": "types",
    "paths": {
      "@/*": ["src/*"],
      "msdllib": ["./src/index"]
    },
    "lib": ["es2015", "dom", "dom.iterable", "scripthost"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "example/**/*.ts",
    "example/**/*.tsx",
    "example/**/*.vue",
    "test/**/*.ts",
    "test/**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
